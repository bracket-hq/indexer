{
  "name": "@bracket/indexer",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "codegen": "ponder codegen",
    "dev": "ponder dev",
    "dotenvx": "dotenvx",
    "fix": "biome check --write --unsafe --no-errors-on-unmatched",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "lint": "pnpm run lint:biome && pnpm run lint:typecheck",
    "lint:biome": "biome check --no-errors-on-unmatched",
    "lint:typecheck": "tsc --noEmit",
    "start": "ponder start"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json}": "biome check --write --unsafe --no-errors-on-unmatched",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@ponder/core": "0.5.24",
    "hono": "4.6.6",
    "viem": "2.21.34"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@dotenvx/dotenvx": "1.20.1",
    "@types/node": "22.7.9",
    "lint-staged": "15.2.10",
    "simple-git-hooks": "2.11.1",
    "sort-package-json": "2.10.1",
    "typescript": "5.6.3"
  },
  "packageManager": "pnpm@8.15.9",
  "engines": {
    "node": ">=18.14"
  }
}
